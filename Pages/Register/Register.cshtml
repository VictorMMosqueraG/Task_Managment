@page
@model TaskManagement.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    #pragma warning disable CS8602
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/register/registerStyle.css" rel="stylesheet">
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <form method="post">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" asp-for="User.name" required>
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" asp-for="User.email" required>
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" asp-for="User.password" required>
        </div>
        <div>
            <label for="role">Role:</label>
            <select id="role" name="role" asp-for="User.role" required>
                <option value="1">Admin</option>
                <option value="2">User</option>
            </select>
        </div>
        <button type="submit">Register</button>
    </form>

    @if (Model.Message != null){
        <div style="color: red;">
            @Model.Message
        </div>
    }
</body>
</html>
