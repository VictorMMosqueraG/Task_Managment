@page
@model TaskManagement.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/login/loginStyle.css" rel="stylesheet">
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <form method="post">
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="Email" asp-for="LoginDto.Email" required>
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="Password" asp-for="LoginDto.Password" required>
        </div>
        <button type="submit">Login</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message)){
        <div style="color: red;">
            @Model.Message
        </div>
    }
</body>
</html>
